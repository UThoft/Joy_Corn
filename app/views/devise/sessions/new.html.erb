
<div class="login-form">
  <h1 class="login-title">SIGN IN</h1>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%# f.label :email %>
        <%= f.email_field :email, :placeholder => 'Enter your email', :autofocus => true, :class => "form-control login-field", :id => "login-email" %>
        <label class="login-field-icon user-icon" for="login-email"></label>
      </div>

      <div class="form-group">
        <%# f.label :password %>
        <%= f.password_field :password, :placeholder => 'Password', :class => "form-control login-field", :id => "login-pass" %>
        <label class="login-field-icon lock-icon" for="login-pass"></label>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div>
          <%# f.check_box :remember_me %> <%# f.label :remember_me %>
        </div>
      <% end -%>

      <div>
        <%= f.submit "Login", :class => "btn btn-primary btn-lg btn-block" %>
      </div>
    <% end %>

<%= render "devise/shared/links" %>

</div>
