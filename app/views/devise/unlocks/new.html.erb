<div class="login-form">
  <%= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%# f.label :email %>
        <%= f.email_field :email, :placeholder => 'Enter your email', :autofocus => true, :class => "form-control login-field", :id => "reg-email" %>
        <label class="login-field-icon user-icon" for="reg-email"></label>
      </div>

      <div><%= f.submit "Resend unlock instructions", :class => "btn btn-primary btn-lg btn-block"%></div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>

